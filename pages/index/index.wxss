#index .lang {
    background: #fff;
    padding: 24rpx;
    border-bottom: solid 1rpx #eee;
    display: flex;
    padding: 23rpx;
    justify-content: space-between;
    color:#007fff;
    align-items: center;
}

#index .from {
    position: relative;
    background: #fff;
    box-shadow:0 16rpx 16rpx -16rpx rgba(0, 0, 0, .3);
    margin-bottom: 24rpx;
    
}

#index .from textarea {
    padding: 30rpx 60rpx 30rpx 30rpx;
    box-sizing: border-box;
    width: 100%;
}

.textarea-placeholder {
    font-size: 48rpx;
}   

#index  .to {
    background-color: #007fff;
    color: #fff;
    margin: 24rpx 10rpx;
    padding: 24rpx;
    border-radius: 4rpx;
}

#index .history-wrap {
    border-radius: 4rpx;
    margin: 24rpx 10rpx;
}

#index .history-item {
    background: #fff;
    padding: 20rpx;
    border-bottom: solid 1rpx #bbb;
}

#index .history-item .raw {
    color: #333;
    margin-bottom: 4rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

#index .history-item .translate {
    color: #888;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

page {
    background-color: #eee;
}

.iconfont.disabled {
    color: #bbb;
}

.icon-close {
    position: absolute;
    right: 20rpx;
    top:20rpx;
    color: #bbb;
}

.icon-right {
    position: absolute;
    bottom: 30rpx;
    right: 20rpx;
    color: #007fff;
    font-size: 46rpx;
}
